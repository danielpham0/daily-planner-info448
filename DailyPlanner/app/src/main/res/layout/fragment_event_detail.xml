<?xml version="1.0" encoding="utf-8"?>
<!--Daniel Pham: I wrote and designed the layout for the event detail which
    provides a layout for a single event. It is designed with two text views
    with custom backgrounds - Event Type and Event Mode. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.EventDetailFragment">
    <ImageView
        android:id="@+id/event_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        android:scaleType="centerCrop"
        />
    <TextView
        android:id="@+id/event_detail_title"
        android:layout_width="wrap_content"
        android:maxWidth="285dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_banner"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Event Title"
        android:textSize="35sp"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/event_detail_arr_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_banner"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Arrival Time"
        android:textSize="15dp"
        android:paddingTop="17dp"
        android:paddingBottom="10dp"
        android:paddingRight="15dp"
        android:textColor="@color/white"/>
    <TextView
        android:id="@+id/event_detail_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_arr_time"
        app:layout_constraintRight_toRightOf="parent"
        android:text="Event Number"
        android:textSize="15sp"
        android:paddingRight="15dp"
        android:textColor="@color/white"/>
    <FrameLayout
        android:id="@+id/event_detail_t_frame"
        android:layout_width="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        >
        <TextView
            android:id="@+id/event_detail_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/type_rounded_border"/>
    </FrameLayout>
    <FrameLayout
        android:id="@+id/event_detail_m_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_title"
        app:layout_constraintLeft_toRightOf="@+id/event_detail_t_frame"
        android:paddingLeft="10dp"
        android:paddingTop="5dp">
        <TextView
            android:id="@+id/event_detail_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mode"
            android:textSize="15dp"
            android:textColor="@color/white"
            android:background="@drawable/mode_rounded_border"/>
    </FrameLayout>

    <LinearLayout
        android:id="@+id/origin_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/event_detail_t_frame"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="15dp">
        <ImageView
            android:id="@+id/origin_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/origin_icon"/>
        <TextView
            android:id="@+id/event_detail_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="50dp"
            android:text="Origin"
            android:textColor="@color/white"
            android:textSize="15sp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/address_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/origin_row"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="15dp">
        <ImageView
            android:id="@+id/address_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/address_icon"/>
        <TextView
            android:id="@+id/event_detail_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="5dp"
            android:paddingRight="20dp"
            android:layout_marginRight="20dp"
            android:text="Address"
            android:textSize="15sp"
            android:textColor="@color/white"/>
    </LinearLayout>

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="124dp"
        android:layout_height="39dp"
        android:paddingLeft="20dp"
        android:layout_marginTop="20dp"
        android:paddingRight="20dp"
        android:text="Details"
        android:textColor="@color/white"
        android:textSize="25sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/address_row" />
    <TextView
        android:id="@+id/event_detail_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/detail_title"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="Loading Description..."
        android:textSize="15sp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/white"/>
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20dp">
        <Button
            android:id="@+id/event_list_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Go Back"
            android:backgroundTint="#323232"
            />
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>